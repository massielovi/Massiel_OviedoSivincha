//rot13
void cifrado(string message){
	string abc="abcdefghijklmnopqrstuvxyz";
	cout<<"Se esta cifrando este mensaje con rot13... ";
	for (int i=0;i<message.length();i++){
		int indice=abc.find(message[i]);
		if(indice==string::npos){
			message[i]=' ';
		}
		else{
			if(indice+13>abc.length()-1){
				indice=(indice+13)-abc.length();
				message[i]=abc[indice];
			}
			else{message[i]=abc[indice+13];
		}}
	}
	cout<<endl <<"Mensaje cifrado : "<<message;
}
